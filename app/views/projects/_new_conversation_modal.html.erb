<div id="modal" class="modal-container-conv-comment">
	<h3 class="send-message-to"></h3>
	<%= form_for Conversation.new, :html => { :id => "new_conversation_comment"}, remote: true do |f| %>
	  <%= f.text_field :subject, placeholder: "Subject" %>

    <%= f.fields_for Conversation.new.messages.new do |m| %>
      <%=m.text_field :body, placeholder: "Message" %>
    <% end %>

	  <%= f.hidden_field :receiver, :id => "receiver-id" %>
	  <%= f.hidden_field :read, :value => false %>
	  <%= f.hidden_field :user_id, :value => current_user.id %>
	  <%= f.submit "Send", id: "reply-button", class: "button" %>
	<% end %>	
	<button id="close-button">Close</button>
</div>


