<div class = 'comments section' id="comments">
	<div class="row" style="position: relative;">
			<h3>Comments</h3>
		<div id="icon-position">
			<%= link_to(image_tag("/svg/plus35.svg", :alt => "Add comment", :width => 20, :height => 20, :title => "Add comment"), "javascript:null", :class => "add-comment-general") %>
		</div>
	</div>
	<div id="add-comment-general" style="display: none;">
		<div class="panel">
			<% if current_user %>
				<%= form_for @project.comments.new, remote: true do |f| %>
				  <%= f.text_area :content, placeholder: "Comment on this project", id: "comment-content" %>
				  <%= f.hidden_field :commentable_type %>
				  <%= f.hidden_field :commentable_id %>
				  <%= f.hidden_field :user_id %>
				  <%= f.hidden_field :project_id, :value => @project.id %>
				  <%= f.submit "Comment", class: "button"%>
				<% end %>
			<% end %>
		</div>
	</div>
	<hr>
	<%= link_to('View all comments', 'javascript:null', :id => "view-all-comments", :style => "display: none;")  %>

	<div class="load-comments">
		<%= render 'paginated_comments' %>
	</div>
	<p id="no-comments" style="display: none;">No comments yet!</p>
	<div class="pagination"></div>

</div>