<div class = 'comments section'>

	<h3>Comments</h3>
	<hr>
	<%= form_for @project.comments.new, remote: true do |f| %>
	  <%= f.text_area :content, placeholder: "Comment on this project", id: "comment-content" %>
	  <%= f.hidden_field :commentable_type %>
	  <%= f.hidden_field :commentable_id %>
	  <%= f.hidden_field :user_id %>
	  <%= f.submit "Comment", class: "button"%>
	<% end %>

	<div id="load-comments">
		<% @all_comments.each do |comment| %>
				<%= image_tag(comment.user.avatar, width: '10%') %>	
					<%= comment.user.first_name %> <%= comment.user.last_name %>					
					<%= comment.content %>
					<%= comment.created_at.to_datetime %>	
					<small>(<%= comment.commentable_type %>)</small>		
			<hr>
		<% end %>
	</div>

</div>