<div class = 'comments section'>

	<h3>Comments</h3>
	<hr>
	<%# if current_user %>
		<%= form_for @project.comments.new, remote: true do |f| %>
		  <%= f.text_area :content, placeholder: "Comment on this project", id: "comment-content" %>
		  <%= f.hidden_field :commentable_type %>
		  <%= f.hidden_field :commentable_id %>
		  <%= f.hidden_field :user_id %>
		  <%= f.submit "Comment", class: "button"%>
		<% end %>
	<%# end %>

	<div class="load-comments">
		<%= render 'paginated_comments' %>
	</div>

</div>