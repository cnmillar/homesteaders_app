<div class = 'section'>


	<h2>Supplies</h2>
	<h3>Ingredients</h3>

	<ul class="no-bullet">
		<% @ingredients.each do |ing|%>
			<li>
				<% if ing.availability %>
					<input type="checkbox" class="shopify_cart" data-shopifyid = <%= ing.shopify_id %> data-quantity = <%= ing.unit_size %>>
						<h5 style="display:inline;"><%= ing.unit_size %> <%= ing.unit_measure %>  <%= ing.name %></h5>
					</input>
				<% else %>
						<h5><%= ing.unit_size %> <%= ing.unit_measure %>  <%= ing.name %></h5>
				<% end %>
			</li>
		<% end %>	
	</ul>

	<h3>Equipment</h3>
	<ul class="no-bullet">
		<% @equipment.each do |equip|%>
			<li>
				<% if equip.availability %>
					<input type="checkbox" class="shopify_cart" data-shopifyid = <%= equip.shopify_id %> data-quantity = <%= equip.unit_size %>>
						<h5 style="display: inline;"><%= equip.unit_size %> <%= equip.unit_measure %> <%= equip.name %></h5>
					</input>
				<% else %>
					<h5 style="display: inline;"><%= equip.name %></h5>
				<% end %>
			</li>
		<% end %>
	</ul>
	<input type="checkbox" id="select-all">Select all available items</input> </br>
	<button id="submit-to-cart">Add to cart</button>
</div>
