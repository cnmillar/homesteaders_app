<div class = 'section'>
	<h2>Instructions</h2>
	<table id="steps-table">
		<% @project.steps.each do |step| %>
			<tr>
				<td><h5><%= step.ordinal %>. </h5></td>
				<td><h5><%= step.content %>
		  		<span class="count-icon">
			  		<%= link_to("javascript:void(0)", "data-step-id" => step.id, "data-comments" => step.comments.to_json, :class => "filter-step-comments") do %>
							<%= image_tag("/svg/chat35.svg", :alt => "Instruction comments", :width => 30, :height => 30, :title => "Instruction comments") %>
					    <span class="count"><%= step.comments.length %></span>							
			  		<% end %>
					</span>
						<%= link_to(image_tag("/svg/plus35.svg", :alt => "Add comment", :width => 20, :height => 20, :title => "Add comment"), "javascript:null") %>
				</h5></td>
			</tr>
		<% end %>
	</table>
</div>
