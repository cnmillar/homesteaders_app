<!DOCTYPE html>
<html>
<head>
  <title>HeApp</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
    <link rel="stylesheet" href="//cdn.jsdelivr.net/jquery.slick/1.5.6/slick.css"/>
    <link rel="stylesheet" href="//cdn.jsdelivr.net/jquery.slick/1.5.6/slick-theme.css"/>
    <%= csrf_meta_tags %>
  </head>

<body>
<% if current_user %>
  <script>APP = {userAvatar: "<%= current_user.avatar %>", userName: "<%= current_user.full_name %>"}</script>
<% end %>
  <%= render 'layouts/navigation' %>

  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

  <%= yield %>


<script src="//cdn.jsdelivr.net/jquery.slick/1.5.6/slick.min.js">
</script>
</body>
