<div class = "panel messages" id='<%= "read-message-#{conv.id}" %>' style="display:none;">

	<% conv.messages.each do |message| %>
		<div class="row">
			<div class="large-2 columns">
				<%= link_to(image_tag(message.user.avatar, width: '30%'), "/users/#{message.user.id}") %>
			</div>
			<div class="large-6 columns">
				<p><%= message.body %></p>
			</div>
			<div class="large-4 columns">
				<p><%= message.created_at %></p>
			</div>
		</div>
	<% end %>
	<br>
	<div class="row">
		<div class="large-1 column">
			<a href="#" id="reply-button" class="button">Reply</a>		
		</div>
		<div class="large-11 columns"></div>
	</div>

</div>

<%= render "reply_modal" %>