
<% if current_user %> 
  <div class='right user-panel logged-in'>
    <%= image_tag(current_user.avatar) %>
    <p>
      <%= link_to current_user.full_name, user_path(current_user.id) %><br />
      <%= link_to 'My Projects', user_path(current_user.id) %> |
      <%= link_to "Log out", logout_path, method: "delete" %>
    </p>
  </div>
<% else %> 
  <div class='right user-panel'>
          <!--
  Below we include the Login Button social plugin. This button uses
  the JavaScript SDK to present a graphical Login button that triggers
  the FB.login() function when clicked.
-->
    <a href ="/auth/facebook" class = 'button radius'>Login with Facebook</a>
    <!-- <fb:login-button scope="public_profile,email" onlogin="checkLoginState();">
    </fb:login-button> -->
  </div>
<% end %>


